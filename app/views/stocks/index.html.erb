<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product name</th>
      <th>Limit date</th>
      <th>Stock zone</th>
      <th>Count</th>
      <th>Category</th>
      <th>Mail sent at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.product_name %></td>
        <td><%= stock.limit_date %></td>
        <td><%= stock.stock_zone %></td>
        <td><%= stock.count %></td>
        <td><%= stock.category %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

